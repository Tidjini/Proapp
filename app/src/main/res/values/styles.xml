<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <!--        <item name="cornerRadius">5dp</item>-->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="elevation">0dp</item>


    </style>


    <style name="Titles">

        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#C4C4C4</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="SecondaryButton" parent="MaterialButtonStyle">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextViewStyle">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#C4C4C4</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="EditTextStyle">

        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="paddingStart">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#C4C4C4</item>
        <item name="android:textStyle">bold</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textScaleX">1.04</item>

    </style>

    <style name="PrimaryEditText" parent="EditTextStyle">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textCursorDrawable">@drawable/primary_crusor</item>
    </style>


    <style name="PrimaryButton" parent="MaterialButtonStyle">
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="rippleColor">@color/light_gray</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">10dp</item>
    </style>
</resources>